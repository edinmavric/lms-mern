# Server Configuration
NODE_ENV=production
PORT=8000

# Database
MONGO_URI=mongodb://127.0.0.1:27017/lms
# Or for production: mongodb://username:password@host:port/database

# Security - JWT Tokens (CRITICAL: Change these!)
JWT_SECRET=your-super-secret-random-string-at-least-32-characters-long
JWT_REFRESH_SECRET=your-different-refresh-token-secret-also-at-least-32-chars

# CORS - Restrict in production
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
# For development: CORS_ORIGIN=http://localhost:3000 | 5173

# Tenant Signup Control (set to 'false' to disable public signup)
ALLOW_TENANT_SIGNUP=true
# For SaaS/controlled tenant creation: ALLOW_TENANT_SIGNUP=false
